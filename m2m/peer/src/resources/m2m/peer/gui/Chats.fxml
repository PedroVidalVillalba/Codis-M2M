<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="m2m.peer.gui.ChatsController">

    <!-- Barra superior con botones -->
    <top>
        <ToolBar>
            <Button fx:id="friendsButton" onAction="#handleFriends" text="󰣐" />
            <Button fx:id="logoutButton" onAction="#handleLogout" text="󰠜" />
        </ToolBar>
    </top>

    <!-- Contenido principal -->
    <center>
        <SplitPane dividerPositions="0.3">

            <!-- Lista de amigos -->
            <VBox prefWidth="250" spacing="10">
                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-alignment: center; -fx-alignment: center;" text="Amigos" />
                <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <ListView fx:id="friendsListView" onMouseClicked="#loadChat" prefHeight="525.0" prefWidth="236.0" />
                </ScrollPane>
            </VBox>


            <!-- Conversación del amigo seleccionado -->
            <VBox prefWidth="550" spacing="10">
                <!-- Mensajes recibidos y enviados -->
                <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
                    <!-- Mensajes recibidos -->
                    <ListView fx:id="receivedMessages" />

                    <!-- Mensajes enviados -->
                    <ListView fx:id="sentMessages" />
                </SplitPane>

                <!-- Campo de texto y botón para enviar -->
                <HBox spacing="10">
                    <TextField fx:id="messageField" promptText="Escribe un mensaje..." HBox.hgrow="ALWAYS" />
                    <Button onAction="#handleSendMessage" text="Enviar" />
                </HBox>
            </VBox>
        </SplitPane>
    </center>
</BorderPane>
