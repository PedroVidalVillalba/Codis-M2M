<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="m2m.peer.gui.LoginController">
    <VBox alignment="CENTER" layoutX="-104.0" layoutY="-108.0" prefHeight="508.0" prefWidth="704.0" spacing="10" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="-108.0">

        <!-- Campos de Usuario y Contraseña -->
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <!-- Usuario -->
            <Label alignment="CENTER_RIGHT" text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="usernameField" prefHeight="24.0" prefWidth="200.0" promptText="Ingresa tu usuario" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Contraseña -->
            <Label alignment="CENTER_RIGHT" text="Contraseña:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <PasswordField fx:id="passwordField" prefHeight="24.0" prefWidth="200.0" promptText="Ingresa tu contraseña" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Botones -->
        <HBox alignment="CENTER" spacing="10">
            <Button onAction="#login" text="Iniciar sesión" />
            <Button onAction="#signUp" text="Registrarse" />
        </HBox>

        <!-- Etiqueta de Error -->
        <Label fx:id="errorLabel" />
    </VBox>
</AnchorPane>
