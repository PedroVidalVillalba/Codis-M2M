<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="m2m.peer.gui.ChatsController" prefHeight="400.0" prefWidth="600.0">
    <ToolBar>
        <Button text="❤️" onAction="#handleFriends" />
        <Button text="🚪" onAction="#handleLogout" />
    </ToolBar>

    <!-- Zona principal con la lista de chats y la conversación -->
    <SplitPane dividerPositions="0.3">
        <!-- Lista de chats -->
        <VBox spacing="5" prefWidth="200">
            <Label text="Chats" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <ListView fx:id="chatList" VBox.vgrow="ALWAYS" />
        </VBox>

        <!-- Conversación -->
        <VBox spacing="5">
            <Label fx:id="chatTitle" text="Selecciona un chat" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <ListView fx:id="messageList" VBox.vgrow="ALWAYS" />
            <HBox spacing="5">
                <TextField fx:id="messageField" promptText="Escribe un mensaje..." HBox.hgrow="ALWAYS" />
                <Button text="Enviar" onAction="#handleSendMessage" />
            </HBox>
        </VBox>
    </SplitPane>
</BorderPane>

